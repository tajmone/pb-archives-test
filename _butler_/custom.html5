<!doctype html>
<html class="no-js" lang="$if(lang)$$lang$$else$en$endif$"$if(dir)$ dir="$dir$"$endif$>
	<head>
		<meta charset="utf-8">
		<meta http-equiv="x-ua-compatible" content="ie=edge">
		<title>$if(meta-title)$$meta-title$$else$$if(title)$$title$$else$The PureBASIC Archives$endif$$endif$</title>
		<meta name="generator" content="pandoc">
$if(description)$
		<meta name="description" content="$description$">
$endif$
$for(author)$
		<meta name="author" content="$author$">
$endfor$
$if(date)$
		<meta name="dcterms.date" content="$date$">
$endif$
$if(keywords)$
		<meta name="keywords" content="$for(keywords)$$keywords$$sep$, $endfor$">
$endif$
		<meta name="viewport" content="width=device-width, initial-scale=1">

		<link rel="apple-touch-icon" href="apple-touch-icon.png">
		<!-- Place favicon.ico in the root directory -->

		<link rel="stylesheet" href="$ROOT$_assets/theme/css/styles.css">
$for(css)$
		<link rel="stylesheet" href="$css$">
$endfor$
	</head>
	<body>

		<div id="container">
			<div class="gidle-row">

				<header id="siteheader"></header>

				<nav id="breadcrumbs">
$breadcrumbs$

				</nav>

$if(pagination)$
				<div class="pagination">
$for(pagination)$
					<span>$if(pagination.link)$<a href="$pagination.link$"$if(pagination.alt)$ title="$pagination.alt$"$endif$>$endif$$pagination.text$$if(pagination.link)$</a>$endif$</span>
$endfor$
				</div>
$endif$	   


				<div id="document">

$if(title)$
					<h1 class="title">$title$</h1>
$if(subtitle)$
					<p class="subtitle">$subtitle$</p>
$endif$
$endif$

$body$
				</div><!-- end document -->
				<div id="sidebar">
					<nav>
$if(toc)$
					   <!--TOC-BEGIN-->
						<h2>Page Contents</h2>

$toc$
					   <!--TOC-END-->
$endif$ 
					</nav>
			 </div><!-- end sidebar -->

			</div><!-- end row -->

$if(pagination)$
				<div class="pagination">
$for(pagination)$
					<span>$if(pagination.link)$<a href="$pagination.link$"$if(pagination.alt)$ title="$pagination.alt$"$endif$>$endif$$pagination.text$$if(pagination.link)$</a>$endif$</span>
$endfor$
				</div>
$endif$	

		</div><!-- end container -->

$if(baseliner)$
		<!-- baseliner -->
		<script src="$ROOT$_assets/theme/js/baseliner.js"></script>
		<script>
		window.onload = function() {
			baseliner = new Baseliner({
				gridHeight: 12,
				gridOffset: 1,
				gridColor: 'red',
				gridOpacity: 50 
			});
		}
		</script>
		<!-- end baseliner -->
$endif$				   

	</body>
</html>
